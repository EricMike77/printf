#include <stdio.h>
#include <stdarg.h>

int _printf(const char *format, ...)
{
    va_list args;
    va_start(args, format);

    int count = 0;
    const char *c;

    for (c = format; *c != '\0'; c++) {
        if (*c != '%') {
            putchar(*c);
            count++;
        } else {
            c++;
            if (*c == 'c') {
                char ch = (char)va_arg(args, int);
                putchar(ch);
                count++;
            } else if (*c == 's') {
                const char *str = va_arg(args, const char*);
                while (*str != '\0') {
                    putchar(*str);
                    str++;
                    count++;
                }
            } else if (*c == '%') {
                putchar('%');
                count++;
            }
        }
    }

    va_end(args);
    return count;
}

int main() {
    _printf("I'm not going anywhere. You can print that wherever you want to. I'm here and I'm a Spur for life.\n");
    _printf("Formatted output: %c, %s, %%\n", 'A', "Hello World");
    return 0;
}
